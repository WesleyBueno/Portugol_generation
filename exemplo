programa
{
	
	funcao inicio()
	{

		//1. Faça um sistema que leia a idade de uma 
		//pessoa expressa em anos, meses e dias e mostre-a expressa apenas em dias. 

		
		cadeia nomeUsuario
		inteiro anoNascimento 
		inteiro salarioUsuario
		inteiro anoAtual = 2020
		
		
		escreva("Digite o nome do usuário: ")	
		leia(nomeUsuario)
		escreva("informe sua data de nascimento: ")
		leia(anoNascimento)
		escreva("Digite o salario: ")
		leia(salarioUsuario)

		escreva("\n oi, meu nome é "+nomeUsuario)
		escreva("\n Nasci no ano de "+anoNascimento)
		escreva("\n Meu salário atual é: "+salarioUsuario)
		escreva("\n Sua idade é:" + (anoAtual - anoNascimento))
		
	}
}
